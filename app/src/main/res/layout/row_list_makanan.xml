<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/con_listitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/list_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20dp"></TextView>

    <CheckBox
        android:id="@+id/checkBoxlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"></CheckBox>

    <TextView
        android:id="@+id/porsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_nama"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="14dp">
    </TextView>
    <TextView
        android:id="@+id/text_porsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_nama"
        android:layout_toRightOf="@+id/porsi"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:text="Porsi"
        android:textSize="14dp">
    </TextView>

    <TextView
        android:id="@+id/jmlh_kkal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/porsi"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18dp">

    </TextView>

    <TextView
        android:id="@+id/text_kkal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/porsi"
        android:layout_toRightOf="@id/jmlh_kkal"
        android:text="Kkal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:textSize="18dp">

    </TextView>

</RelativeLayout>